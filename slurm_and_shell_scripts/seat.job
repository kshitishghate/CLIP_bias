#!/bin/bash
#SBATCH --job-name=seat
#SBATCH --cpus-per-task=6
#SBATCH --mem=32G
#SBATCH --account=stf
#SBATCH --partition=ckpt
#SBATCH --time=24:00:00
#SBATCH --output=./slurm_and_shell_scripts/seat%a.out
#SBATCH --error=./slurm_and_shell_scripts/seat%a.out
#SBATCH --gres=gpu:1
