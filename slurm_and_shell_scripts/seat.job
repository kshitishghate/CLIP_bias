# Run the container
apptainer run --fakeroot --nv -B $CLIP_ROOT \
--overlay ./slurm_and_shell_scripts/conda-overlay.img:ro \
./slurm_and_shell_scripts/hyak-container.sif \
./slurm_and_shell_scripts/seat.sh
